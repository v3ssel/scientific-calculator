<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="550"
             xmlns:vm="using:ScientificCalculator.ViewModels"
             x:Class="ScientificCalculator.Views.HistoryView"
             x:DataType="vm:HistoryViewModel">
    <Design.DataContext>
        <vm:HistoryViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Margin="10"
                CornerRadius="5"
                Background="#c0c0c0">
            <TextBlock FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Text="History" />
        </Border>

        <ScrollViewer Grid.Row="1" Grid.Column="0" Name="scroll_view_hv">
            <StackPanel>
                <TextBlock IsVisible="{Binding !HistoryRecords.Count}" HorizontalAlignment="Center" FontSize="18" FontWeight="Medium" TextWrapping="Wrap" Text="No history found."/>
                <ListBox ItemsSource="{Binding HistoryRecords}" SelectedItem="{Binding SelectedExpression}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock HorizontalAlignment="Left" FontSize="18" FontWeight="Medium" TextWrapping="Wrap" Text="{Binding Expression}" />
                                <TextBlock HorizontalAlignment="Right" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" Text="{Binding Answer, StringFormat='= {0}'}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
